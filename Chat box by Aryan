
#include <stdio.h>
#include <string.h>

int main() {
    char message[100];

    printf("----- Simple Chat Box in C -----\n");
    printf("Type 'bye' to exit.\n\n");

    while (1) {
        printf("You: ");
        fgets(message, sizeof(message), stdin);

        // Remove newline character
        message[strcspn(message, "\n")] = 0;

        // Exit condition
        if (strcmp(message, "bye") == 0) {
            printf("Bot: Goodbye! Have a nice day.\n");
            break;
        }

        // Responses
        if (strcmp(message, "hi") == 0 || strcmp(message, "hello") == 0) {
            printf("Bot: Hello! How can I help you?\n");
        }
        else if (strstr(message, "how are you") != NULL) {
            printf("Bot: I'm good! Thanks for asking.\n");
        }
        else if (strstr(message, "name") != NULL) {
            printf("Bot: I am a simple C Chatbot.\n");
        }
        else {
            printf("Bot: Sorry, I didn't understand that.\n");
        }
    }

    return 0;
}
